<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="question"
            type="com.codeaftercode.reciteboy.bean.Question" />
    </data>

    <RadioGroup
        android:id="@+id/rg_question_info_type0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="@{question.getOptionAtIndex(0)}"
            android:id="@+id/rb_question_info_type0_optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="@{question.getOptionAtIndex(1)}"
            android:id="@+id/rb_question_info_type0_optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="@{question.getOptionAtIndex(2)}"
            android:id="@+id/rb_question_info_type0_optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="@{question.getOptionAtIndex(3)}"
            android:id="@+id/rb_question_info_type0_optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>
</layout>